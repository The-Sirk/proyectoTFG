			"item": [
				{
					"name": "Post /usuarios",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Codigo de estado 201, usuario creado\", function () {\r",
									"    if(pm.response == 201){\r",
									"     pm.response.to.have.status(201);\r",
									"    }\r",
									"});\r",
									"\r",
									"var json = pm.response.json();\r",
									"\r",
									"pm.environment.set(\"documentID\", json.documentID);\r",
									"pm.environment.set(\"nick\", json.nick);\r",
									"pm.test(`Usuario creado - documentID: ${json.documentID} - nick: ${json.nick},`)"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\r\n  \"correo\": \"{{correo}}\",\r\n  \"imagen_perfil\": \"{{imagen_perfil}}\",\r\n  \"nick\": \"{{nick}}\",\r\n  \"amigos_id\": [\"{{amigos_id}}\"\r\n  ],\r\n  \"peliculas_criticadas\": [\r\n    {{peliculas_criticadas}}\r\n  ],\r\n  \"peliculas_favoritas\": [\r\n   {{peliculas_favoritas}}\r\n  ],\r\n  \"peliculas_vistas\": [\r\n    {{peliculas_vistas}}\r\n  ]\r\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{UrlBase}}/usuarios",
							"host": [
								"{{UrlBase}}"
							],
							"path": [
								"usuarios"
							]
						}
					},
					"response": []
				},
				{
					"name": "Get /usuarios/{{id}}",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Tiempo de respuesta inferior a 200ms.\", function () {\r",
									"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
									"});\r",
									"pm.test(\"Codigo de respuesta 200, acceso correcto.\", function () {\r",
									"    pm.response.to.have.status(200);\r",
									"});\r",
									"\r",
									"var json = pm.response.json();\r",
									"pm.test(\"Se obtiene un elemento de usuario, id: \" + json.documentID , function(){\r",
									"    if(typeof json.peliculas_vistas == \"array\"){\r",
									"    pm.expect(typeof json.documentID).to.be.equal(\"string\");}\r",
									"});"
								],
								"type": "text/javascript"
