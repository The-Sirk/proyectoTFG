					"raw": "{\r\n  \"usuarioUID\": \"{{usuarioUID}}\",\r\n  \"peliculaID\": {{peliculaid}},\r\n  \"puntuacion\": {{puntuacion}},\r\n  \"comentario\": \"{{comentario}}\"\r\n}",
