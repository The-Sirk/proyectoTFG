				"url": {
					"raw": "{{UrlBase}}/criticas/",
					"host": [
						"{{UrlBase}}"
					],
					"path": [
						"criticas",
						""
					]
				}
			},
			"response": []
		},
		{
			"name": "Get /criticas",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Tiempo de respuesta inferior a 200ms.\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(200);\r",
							"});\r",
							"pm.test(\"Codigo de respuesta 200, acceso correcto.\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var json = pm.response.json();\r",
							"pm.test(\"Se obtiene almenos un elemento id de criticas, id: \" + json[0].documentID , function(){\r",
							"    if(typeof json[0].peliculas_vistas == \"array\"){\r",
							"    pm.expect(typeof json[0].documentID).to.be.equal(\"string\");}\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{UrlBase}}/criticas/?id={{documentID}}&userId={{usuarioUID}}&peliculaId={{peliculaid}}",
					"host": [
						"{{UrlBase}}"
					],
					"path": [
						"criticas",
						""
					],
					"query": [
						{
							"key": "id",
							"value": "{{documentID}}"
						},
						{
							"key": "userId",
							"value": "{{usuarioUID}}"
						},
						{
							"key": "peliculaId",
							"value": "{{peliculaid}}"
						}
					]
				}
			},
			"response": []
		}
	]
